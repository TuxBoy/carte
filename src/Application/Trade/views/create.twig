{% extends 'layout.twig' %}

{% block body %}

    <div class="container" style="padding-top: 70px;">
        <h1>Ajouter un commerce</h1>

        <form action="{{ path('trade.create') }}" method="post">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Nom">
            </div>
            <div class="form-group">
                <input type="text" name="street" class="form-control" placeholder="Rue">
            </div>
            <div class="form-group">
                <input type="text" name="lat" class="form-control" placeholder="Latitude">
            </div>
            <div class="form-group">
                <input type="text" name="lng" class="form-control" placeholder="Longitude">
            </div>

            <button class="btn btn-primary">Ajouter</button>
        </form>
    </div>

{% endblock %}